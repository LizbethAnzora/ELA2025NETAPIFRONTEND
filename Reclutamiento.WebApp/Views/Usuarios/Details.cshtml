@model ReclutamientoFrontend.WebApp.Models.Dtos.UsuarioDto

@{
    ViewData["Title"] = "Detalles del Administrador";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fa-solid fa-address-card me-2"></i> Perfil del Administrador</h4>
                </div>
                <div class="card-body p-4">
                    
                    <h5 class="card-title text-primary mb-4 border-bottom pb-2">Datos Principales</h5>

                    <dl class="row mb-5 detalle-usuario">
                        <dt class="col-sm-4 fw-normal text-muted">Nombre Completo</dt>
                        <dd class="col-sm-8 fw-bold text-dark">@Model.NombreCompleto</dd>

                        <dt class="col-sm-4 fw-normal text-muted">Correo Electrónico</dt>
                        <dd class="col-sm-8 fw-bold text-dark">@Model.CorreoElectronico</dd>

                        <dt class="col-sm-4 fw-normal text-muted">Rol del Sistema</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-white fw-bold py-2 px-3">ADMINISTRADOR</span>
                        </dd>
                    </dl>
                    
                    <div class="d-flex flex-column flex-md-row justify-content-end gap-2 pt-3 border-top">
                        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning order-2 order-md-1">
                            <i class="fa-solid fa-edit"></i> Editar Nombre
                        </a>
                        <a asp-action="Index" class="btn btn-secondary order-1 order-md-2">
                            <i class="fa-solid fa-arrow-left"></i> Regresar a la Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>