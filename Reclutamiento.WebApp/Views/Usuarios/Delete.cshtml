@model ReclutamientoFrontend.WebApp.Models.Dtos.UsuarioDto

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container py-5">
    <h1 class="mb-4 text-danger"><i class="bi bi-trash-fill"></i> Eliminar Usuario</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">¿Está seguro de eliminar este usuario?</h5>
            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Nombre Completo:</strong> @Model.NombreCompleto</li>
                <li class="list-group-item"><strong>Correo Electrónico:</strong> @Model.CorreoElectronico</li>
                <li class="list-group-item"><strong>Rol:</strong> @Model.Rol</li>
            </ul>
            <form asp-action="Eliminar">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>