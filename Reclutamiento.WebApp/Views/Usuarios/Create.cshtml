@model ReclutamientoFrontend.WebApp.Models.Dtos.UsuarioDto

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container py-5">
    <h1 class="mb-4 text-success"><i class="bi bi-person-plus-fill"></i> Crear Usuario</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Crear">
                <div class="mb-3">
                    <label asp-for="NombreCompleto" class="form-label">Nombre Completo</label>
                    <input asp-for="NombreCompleto" class="form-control" placeholder="Ingresa el nombre completo" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                    <input asp-for="CorreoElectronico" class="form-control" placeholder="correo@ejemplo.com"/>
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Contrasena" class="form-label">Contraseña</label>
                    <input asp-for="Contrasena" type="password" class="form-control" placeholder="********"/>
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                 <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
       