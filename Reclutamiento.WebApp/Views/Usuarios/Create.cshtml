@using ReclutamientoFrontend.WebApp.Models.Dtos
@model UsuarioDto

@{
    ViewData["Title"] = "Crear Nuevo Administrador";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="fa-solid fa-user-plus me-2"></i> Registrar Administrador</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Crear" method="post" autocomplete="off" novalidate>
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fa-solid fa-triangle-exclamation"></i> Por favor, corrige los errores antes de guardar.
                        </div>

                        <div class="mb-3">
                            <label asp-for="NombreCompleto" class="form-label fw-bold">Nombre Completo <span class="text-danger">*</span></label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="Ingresa el nombre completo" />
                            <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="CorreoElectronico" class="form-label fw-bold">Correo Electrónico <span class="text-danger">*</span></label>
                            <input asp-for="CorreoElectronico" type="email" class="form-control" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Contrasena" class="form-label fw-bold">Contraseña <span class="text-danger">*</span></label>
                            <input asp-for="Contrasena" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                            <span asp-validation-for="Contrasena" class="text-danger small"></span>
                        </div>
                        
                        <div class="alert alert-info small py-2" role="alert">
                            <i class="fa-solid fa-info-circle"></i> Los campos marcados con <span class="text-danger">*</span> son obligatorios.
                        </div>

                        <div class="d-flex flex-column flex-md-row justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary order-2 order-md-1">
                                <i class="fa-solid fa-circle-xmark"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success order-1 order-md-2">
                                <i class="fa-solid fa-save"></i> Guardar Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}