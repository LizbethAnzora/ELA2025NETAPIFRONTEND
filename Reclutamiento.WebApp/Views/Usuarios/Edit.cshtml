@using ReclutamientoFrontend.WebApp.Models.ViewModels
@model EditarUsuarioViewModel 

@{
    ViewData["Title"] = "Editar Nombre de Administrador";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i> Editar Nombre</h3>
                </div>
                <div class="card-body p-4">
                    
                    <div class="alert alert-warning small mb-4" role="alert">
                        <i class="fa-solid fa-lock"></i> **Recuerda:** Solo puedes modificar el **Nombre Completo**.
                    </div>

                    <form asp-action="Editar" method="post" autocomplete="off" novalidate>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label class="form-label text-muted">Correo Electrónico Actual</label>
                            <p class="form-control-plaintext fw-bold text-primary border-bottom pb-2">@ViewBag.CorreoActual</p>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NombreCompleto" class="form-label fw-bold">Nuevo Nombre Completo <span class="text-danger">*</span></label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="Ingrese el nuevo nombre completo" maxlength="100" />
                            <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-flex flex-column flex-md-row justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary order-2 order-md-1">
                                <i class="fa-solid fa-circle-xmark"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning order-1 order-md-2">
                                <i class="fa-solid fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}