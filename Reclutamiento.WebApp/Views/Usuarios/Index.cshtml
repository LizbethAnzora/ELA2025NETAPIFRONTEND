@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.UsuarioDto>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container py-5">
    <h1 class="mb-4 text-primary"><i class="bi bi-people-fill"></i> Gestión de Usuarios</h1>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Crear Usuario
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre Completo</th>
                <th>Correo Electrónico</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var usuario in Model)
            {
                <tr>
                    <td>@usuario.NombreCompleto</td>
                    <td>@usuario.CorreoElectronico</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-info btn-sm" title="Detalles">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm" title="Eliminar">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>