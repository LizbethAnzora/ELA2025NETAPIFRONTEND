@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.UsuarioDto>

@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="mb-4 text-primary"><i class="fa-solid fa-users"></i> Usuarios</h1>

<div class="card shadow-sm p-4 mb-4">
    <form method="get" asp-action="Index" class="row g-3">
        <div class="col-md-5">
            <input type="text" name="nombre" class="form-control" placeholder="Buscar por nombre" />
        </div>
        <div class="col-md-5">
            <input type="text" name="correo" class="form-control" placeholder="Buscar por correo" />
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-search"></i> Buscar
            </button>
        </div>
    </form>
</div>

<div class="mb-3">
    <a asp-action="Crear" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Crear Usuario
    </a>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>Nombre Completo</th>
            <th>Correo Electrónico</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model)
        {
            <tr>
                <td>@usuario.NombreCompleto</td>
                <td>@usuario.CorreoElectronico</td>
                <td class="text-center">
                    <a asp-action="Detalles" asp-route-id="@usuario.Id" class="btn btn-info btn-sm">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a asp-action="Editar" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm">
                        <i class="fa-solid fa-edit"></i>
                    </a>
                    <a asp-action="Eliminar" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>