@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.UsuarioDto>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<h1 class="mb-4 text-primary"><i class="bi bi-people-fill"></i> Listado de Usuarios</h1>

<div class="card shadow-sm p-3 mb-4">
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Nuevo Usuario
        </a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Email</td>
                <td>@usuario.Rol</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>