@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.VacanteDto>
@using System.Text.Json
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Inicio";
    // El rol se usa para decidir qué contenido mostrar (Admin o Solicitante/Guest)
    var userRole = User?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Guest"; 
    var userName = User?.Identity?.Name ?? "";
    var rawRol = "";
    if (Context.Session != null && Context.Session.Keys.Contains("RawRol"))
    {
        rawRol = Context.Session.GetString("RawRol") ?? "";
    }
}

<div class="container py-5">
    
    <div class="mb-3">
        <span class="text-secondary">
             @* Visualización de rawRol eliminada o mantenida, sin cambios funcionales *@
            @if (!string.IsNullOrEmpty(rawRol))
            {
                
            }
        </span>
    </div>

    @if (userRole == "Admin")
    {
        <div class="text-center mt-5">
            <h1 class="display-4 text-primary mb-4">
                <i class="fa-solid fa-hand-sparkles"></i> Bienvenid@s a EteriumTech
            </h1>
            <p class="lead">Panel de administración</p>
            @* Sugerencia: Añadir un botón para ir a la gestión de vacantes si es Admin *@
            <a asp-controller="Vacantes" asp-action="Index" class="btn btn-primary btn-lg mt-3">Gestionar Vacantes</a>
        </div>
    }
    else if (userRole == "Solicitante" || userRole == "Guest") // Asumiendo que Guests también pueden verlas
    {
        <div class="text-center mb-5">
            <h1 class="display-4 text-primary">
                <i class="fa-solid fa-briefcase"></i> Encuentra Tu Próxima Oportunidad
            </h1>
            <p class="lead">Explora las vacantes disponibles y únete a nuestro equipo.</p>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fa-solid fa-circle-info"></i> No hay vacantes disponibles en este momento.
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var vacante in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fa-solid fa-briefcase me-2"></i> @vacante.Titulo
                                </h5>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <p class="card-text flex-grow-1">@vacante.Descripcion</p>
                            </div>
                            <div class="card-footer bg-light d-flex justify-content-end align-items-center">
                                @* Se ELIMINÓ la referencia al AdministradorNombre:
                                <small class="text-muted">
                                    <i class="fa-solid fa-building me-1"></i> @vacante.AdministradorNombre
                                </small>
                                *
                                Se ajustó la alineación del botón al eliminar el campo.
                                *
                                * Se asume que el DTO en este punto ya solo contiene las propiedades del endpoint /publico *@
                                
                                <a asp-controller="Solicitudes" asp-action="Create" asp-route-vacanteId="@vacante.Id" class="btn btn-success btn-sm">
                                    <i class="fa-solid fa-paper-plane me-1"></i> Aplicar
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    
</div>