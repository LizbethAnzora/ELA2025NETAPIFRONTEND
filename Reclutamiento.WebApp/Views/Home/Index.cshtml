@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.VacanteDto>
@using System.Text.Json
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Inicio";
    var userRole = User?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Guest";
    var userName = User?.Identity?.Name ?? "";
    var rawRol = "";
    if (Context.Session != null && Context.Session.Keys.Contains("RawRol"))
    {
        rawRol = Context.Session.GetString("RawRol") ?? "";
    }
    // Obtener la lista de IDs de vacantes ya aplicadas desde el ViewBag
    var vacantesAplicadasIds = (ViewBag.VacantesAplicadasIds as List<int>) ?? new List<int>();
}

<div class="container py-5">
    
    <div class="mb-3">
        <span class="text-secondary">
            @if (!string.IsNullOrEmpty(rawRol))
            {
                 // Mantener o eliminar si no es relevante para el solicitante
            }
        </span>
    </div>

    @if (userRole == "Admin")
    {
        <div class="text-center mt-5">
            <h1 class="display-4 text-primary mb-4">
                <i class="fa-solid fa-hand-sparkles"></i> Bienvenid@s a EteriumTech
            </h1>
            <p class="lead">Panel de administración</p>
            <a asp-controller="Vacantes" asp-action="Index" class="btn btn-primary btn-lg mt-3">Gestionar Vacantes</a>
        </div>
    }
    else if (userRole == "Solicitante" || userRole == "Guest")
    {
        <div class="text-center mb-5">
            <h1 class="display-4 text-primary">
                <i class="fa-solid fa-briefcase"></i> Encuentra Tu Próxima Oportunidad
            </h1>
            <p class="lead">Explora las vacantes disponibles y únete a nuestro equipo.</p>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fa-solid fa-circle-info"></i> No hay vacantes disponibles en este momento.
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-6 row-cols-lg-3 g-4">
                @foreach (var vacante in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0">
                                    <i class="fa-solid fa-briefcase me-2"></i> @vacante.Titulo
                                </h5>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <p class="card-text flex-grow-1">
                                    @* Mostrar solo el inicio de la descripción para mantener el diseño *@
                                    @(vacante.Descripcion?.Length > 500 ? vacante.Descripcion.Substring(0, 500) + "..." : vacante.Descripcion)
                                </p>
                                 
                                <div class="mb-3">
                                    <strong><i class="fa-solid fa-location-dot me-1"></i> Ubicación:</strong> @vacante.Ubicacion
                                </div>
                            </div>
                            <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                                
                                    <a asp-controller="Solicitudes" asp-action="Create" asp-route-vacanteId="@vacante.Id" class="btn btn-success btn-sm">
                                        <i class="fa-solid fa-paper-plane me-1"></i> Aplicar
                                    </a>
                                
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Script para cargar los detalles de la vacante en el Modal
            $('#detalleVacanteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Botón que activó el modal
                var titulo = button.data('titulo'); // Extrae info de los atributos data-*
                var descripcion = button.data('descripcion');
                var ubicacion = button.data('ubicacion');
                var requisitos = button.data('requisitos');

                var modal = $(this);
                modal.find('#modalVacanteTitulo').text(titulo);
                modal.find('#modalVacanteDescripcion').text(descripcion);
                modal.find('#modalVacanteUbicacion').text(ubicacion);
                modal.find('#modalVacanteRequisitos').text(requisitos);
            });
        });
    </script>
}