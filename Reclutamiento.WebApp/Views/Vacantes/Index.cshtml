@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.VacanteDto>
@using System.Text.Json;
@{
    ViewData["Title"] = "Gestión de Vacantes";
    var filtroActual = ViewData["FiltroActual"] as string;
}

<div class="container py-4">
    
    <h3 class="mb-4 text-primary fw-bold"><i class="fa-solid fa-briefcase me-2"></i> Panel de Gestión de Vacantes</h3>

    <div class="card shadow-lg mb-4 border-0">
        <div class="card-body py-3">
            <div class="row g-2 align-items-center justify-content-between">
                
                <div class="col-12 col-md-3 order-md-2 d-grid">
                    <a asp-action="Create" class="btn btn-success shadow-sm btn-md">
                        <i class="fa-solid fa-plus me-2"></i> Crear Vacante
                    </a>
                </div>

                <div class="col-12 col-md-9 order-md-1">
                    <form method="get" asp-action="Index" class="input-group">
                        <input 
                            type="text" 
                            id="filtroTitulo" 
                            name="titulo" 
                            class="form-control" 
                            placeholder="Buscar por Título..." 
                            value="@filtroActual" 
                        />
                        <button type="submit" class="btn btn-primary btn-md" title="Aplicar filtro">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-md" title="Limpiar filtros">
                            <i class="fa-solid fa-xmark"></i> Limpiar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-5 p-4 shadow-lg" role="alert">
            <i class="fa-solid fa-box-open fa-2x mb-2"></i><br>
            <h4 class="alert-heading">No hay Vacantes</h4>
            <p class="mb-0">No se encontraron vacantes con los criterios de búsqueda.</p>
        </div>
    }
    else
    {
        <div class="table-responsive d-none d-md-block">
            <table class="table table-hover align-middle bg-white shadow-lg rounded">
                <thead class="bg-light text-muted border-bottom border-secondary border-2">
                    <tr>
                        <th style="width: 45%;" class="py-3">Título</th>
                        <th style="width: 15%;" class="py-3 text-center">Estado</th>
                        <th class="text-center py-3" style="width: 40%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vacante in Model)
                    {
                        <tr class="border-bottom">
                            <td class="fw-bold text-primary">@vacante.Titulo</td>
                            <td class="text-center">
                                @if (vacante.EstaActiva)
                                {
                                    <span class="badge bg-success py-2 px-3">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary py-2 px-3">Inactiva</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group" aria-label="Acciones de vacante">
                                    
                                    <a asp-action="Solicitudes" asp-route-vacanteId="@vacante.Id" class="btn btn-info text-white" title="Ver Solicitudes">
                                        <i class="fa-solid fa-users"></i>
                                    </a>
                                    
                                    <a asp-action="Details" asp-route-id="@vacante.Id" class="btn btn-outline-info" title="Ver Detalles">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@vacante.Id" class="btn btn-outline-warning" title="Editar Vacante">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>

                                    @if (vacante.EstaActiva)
                                    {
                                        @* BOTÓN DESHABILITAR: Activa el modal de confirmación *@
                                        <button type="button" class="btn btn-outline-danger" title="Deshabilitar Vacante"
                                                data-bs-toggle="modal" data-bs-target="#deshabilitarModal" 
                                                data-vacante-id="@vacante.Id" data-vacante-titulo="@vacante.Titulo">
                                            <i class="fa-solid fa-ban"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        @* BOTÓN HABILITAR: Activa el nuevo modal de confirmación *@
                                        <button type="button" class="btn btn-outline-success" title="Habilitar Vacante (Re-activar)"
                                                data-bs-toggle="modal" data-bs-target="#habilitarModal" 
                                                data-vacante-id="@vacante.Id" data-vacante-titulo="@vacante.Titulo">
                                            <i class="fa-solid fa-circle-check"></i>
                                        </button>
                                    }

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Versión Móvil: Se ajusta para usar el modal en ambas acciones *@
        <div class="d-md-none">
            <h5 class="mb-3 text-muted">Vacantes:</h5>
            @foreach (var vacante in Model)
            {
                <div class="card mb-3 shadow-sm border-start @(vacante.EstaActiva ? "border-success" : "border-secondary") border-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary"><i class="fa-solid fa-tag me-2"></i> @vacante.Titulo</h5>
                        
                        <div class="mb-3">
                            <strong class="me-2">Estado:</strong>
                            @if (vacante.EstaActiva)
                            {
                                <span class="badge bg-success py-1 px-2">Activa</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary py-1 px-2">Inactiva</span>
                            }
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-action="Solicitudes" asp-route-vacanteId="@vacante.Id" class="btn btn-info text-white btn-sm">
                                <i class="fa-solid fa-users me-2"></i> Ver Solicitudes
                            </a>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@vacante.Id" class="btn btn-outline-info flex-fill">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@vacante.Id" class="btn btn-outline-warning flex-fill">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                
                                @if (vacante.EstaActiva)
                                {
                                    @* MÓVIL: BOTÓN DESHABILITAR (Activa modal) *@
                                    <button type="button" class="btn btn-outline-danger flex-fill" title="Deshabilitar Vacante"
                                            data-bs-toggle="modal" data-bs-target="#deshabilitarModal" 
                                            data-vacante-id="@vacante.Id" data-vacante-titulo="@vacante.Titulo">
                                        <i class="fa-solid fa-ban"></i>
                                    </button>
                                }
                                else
                                {
                                    @* MÓVIL: BOTÓN HABILITAR (Activa modal) *@
                                    <button type="button" class="btn btn-outline-success flex-fill" title="Habilitar Vacante (Re-activar)"
                                            data-bs-toggle="modal" data-bs-target="#habilitarModal" 
                                            data-vacante-id="@vacante.Id" data-vacante-titulo="@vacante.Titulo">
                                        <i class="fa-solid fa-circle-check"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* ======================================== *@
@* MODAL DE CONFIRMACIÓN PARA DESHABILITAR *@
@* ======================================== *@
<div class="modal fade" id="deshabilitarModal" tabindex="-1" aria-labelledby="deshabilitarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deshabilitarModalLabel"><i class="fa-solid fa-triangle-exclamation me-2"></i> Confirmar Deshabilitación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deshabilitar-modal-message"></p>
                <p class="small text-muted">Esta acción oculta el puesto de los solicitantes. Puede reactivarlo más tarde.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deshabilitarForm" asp-action="Deshabilitar" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deshabilitarIdInput" value="" />
                    <button type="submit" class="btn btn-danger"><i class="fa-solid fa-ban me-1"></i> Confirmar Deshabilitación</button>
                </form>
            </div>
        </div>
    </div>
</div>

@* ======================================== *@
@* MODAL DE CONFIRMACIÓN PARA HABILITAR (NUEVO) *@
@* ======================================== *@
<div class="modal fade" id="habilitarModal" tabindex="-1" aria-labelledby="habilitarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="habilitarModalLabel"><i class="fa-solid fa-circle-check me-2"></i> Confirmar Habilitación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="habilitar-modal-message"></p>
                <p class="small text-muted">Esta acción reactivará el puesto, haciéndolo visible inmediatamente para los solicitantes.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="habilitarForm" asp-action="Habilitar" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="habilitarIdInput" value="" />
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-circle-check me-1"></i> Confirmar Habilitación</button>
                </form>
            </div>
        </div>
    </div>
</div>

---

@section Scripts {
    <script>
        // Script para manejar los dos modales de confirmación (Bootstrap 5)

        // ------------------------------------
        // Lógica para el modal de DESHABILITAR
        // ------------------------------------
        var deshabilitarModal = document.getElementById('deshabilitarModal');
        if (deshabilitarModal) {
            deshabilitarModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget; 
                var vacanteId = button.getAttribute('data-vacante-id');
                var vacanteTitulo = button.getAttribute('data-vacante-titulo');

                var modalMessage = deshabilitarModal.querySelector('#deshabilitar-modal-message');
                var vacanteIdInput = deshabilitarModal.querySelector('#deshabilitarIdInput');

                modalMessage.innerHTML = `¿Está seguro de querer **Deshabilitar** la vacante: <strong>${vacanteTitulo}</strong>?`;
                vacanteIdInput.value = vacanteId;
            });
        }
        
        // ------------------------------------
        // Lógica para el modal de HABILITAR (NUEVO)
        // ------------------------------------
        var habilitarModal = document.getElementById('habilitarModal');
        if (habilitarModal) {
            habilitarModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget; 
                var vacanteId = button.getAttribute('data-vacante-id');
                var vacanteTitulo = button.getAttribute('data-vacante-titulo');

                var modalMessage = habilitarModal.querySelector('#habilitar-modal-message');
                var vacanteIdInput = habilitarModal.querySelector('#habilitarIdInput');

                modalMessage.innerHTML = `¿Está seguro de querer **Habilitar** (Re-activar) la vacante: <strong>${vacanteTitulo}</strong>?`;
                vacanteIdInput.value = vacanteId;
            });
        }
    </script>
}