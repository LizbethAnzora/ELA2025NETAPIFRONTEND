@model ReclutamientoFrontend.WebApp.Models.Dtos.VacanteDto

@{
    ViewData["Title"] = "Detalles de la Vacante";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fa-solid fa-file-invoice me-2"></i> Detalles de la Vacante</h4>
                </div>
                <div class="card-body p-4">
                    
                    <h5 class="card-title text-primary mb-4 border-bottom pb-2">@Model.Titulo</h5>

                    <dl class="row mb-4">
                        
                       
                        <dt class="col-sm-4 fw-normal text-muted">Ubicación</dt>
                        <dd class="col-sm-8 fw-bold text-dark">@Model.Ubicacion</dd>

                        
                        <dt class="col-sm-4 fw-normal text-muted">Estado Actual</dt>
                        <dd class="col-sm-8">
                            @if (Model.EstaActiva) 
                            {
                                <span class="badge bg-success fw-bold py-2 px-3">Activa</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fw-bold py-2 px-3">Inactiva</span>
                            }
                        </dd>
                        
                        
                        <dt class="col-sm-4 fw-normal text-muted">Fecha de Creación</dt>
                        <dd class="col-sm-8 fw-bold text-dark">@Model.FechaCreacion.ToShortDateString()</dd>


                    </dl>
                    
                    <h5 class="card-title text-primary mb-3 border-bottom pb-2">Descripción del Puesto</h5>
                    
                    <div class="card bg-light border-0 mb-4 p-3">
                        @* Uso de Html.Raw() para mantener saltos de línea al ver la descripción. *@
                        <p class="card-text text-dark">@Html.Raw(Model.Descripcion?.Replace("\n", "<br/>"))</p>
                    </div>
                    
                    <h5 class="card-title text-primary mb-3 border-bottom pb-2">Requisitos y Perfil</h5>
                    
                    <div class="card bg-light border-0 mb-4 p-3">
                        @* Uso de Html.Raw() para mantener saltos de línea al ver los requisitos. *@
                        <p class="card-text text-dark">@Html.Raw(Model.Requisitos?.Replace("\n", "<br/>"))</p>
                    </div>
                    
                    <div class="d-flex flex-column flex-md-row justify-content-end gap-2 pt-3 border-top">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning order-2 order-md-1">
                            <i class="fa-solid fa-edit"></i> Editar
                        </a>
                        <a asp-action="Solicitudes" asp-route-vacanteId="@Model.Id" class="btn btn-info text-white order-3 order-md-2">
                            <i class="fa-solid fa-users"></i> Ver Solicitudes
                        </a>
                        <a asp-action="Index" class="btn btn-secondary order-1 order-md-3">
                            <i class="fa-solid fa-arrow-left"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>