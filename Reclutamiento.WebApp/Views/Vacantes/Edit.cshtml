@model ReclutamientoFrontend.WebApp.Models.Dtos.VacanteDto

@{
    ViewData["Title"] = "Editar Vacante";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i> Editar Vacante</h4>
                </div>
                <div class="card-body p-4">
                    
                    <form asp-action="Editar" method="post" autocomplete="off" novalidate>
                      
                        <div class="mb-3">
                            <label class="form-label text-muted fw-bold">Administrador Creador</label>
                            <p class="form-control-plaintext fw-bold text-primary border-bottom pb-2">@Model.AdministradorNombre</p>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label fw-bold">Título de la Vacante <span class="text-danger">*</span></label>
                            <input asp-for="Titulo" class="form-control" placeholder="Título del puesto" />
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción Completa <span class="text-danger">*</span></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="5" placeholder="Detalle las responsabilidades y requisitos..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Estado" class="form-label fw-bold">Estado Actual <span class="text-danger">*</span></label>
                            <select asp-for="Estado" class="form-select">
                                <option value="Activa">Activa (Pública)</option>
                                <option value="Inactiva">Inactiva (Desactivada)</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>
                        
                        <div class="alert alert-info small py-2" role="alert">
                            <i class="fa-solid fa-info-circle"></i> Los campos marcados con <span class="text-danger">*</span> son obligatorios.
                        </div>

                        <div class="d-flex flex-column flex-md-row justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary order-2 order-md-1">
                                <i class="fa-solid fa-circle-xmark"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning order-1 order-md-2">
                                <i class="fa-solid fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}