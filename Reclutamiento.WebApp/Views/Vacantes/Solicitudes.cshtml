@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.SolicitudDto>
@using ReclutamientoFrontend.WebApp.Models.ViewModels

@{
    var vacanteTitulo = ViewData["VacanteTitulo"] as string ?? "Vacante Desconocida";
    var vacanteId = ViewData["VacanteId"] as int? ?? 0;

    ViewData["Title"] = $"Solicitudes para: {vacanteTitulo}";
}

<div class="container py-4">
    
    <h4 class="mb-2 text-primary fw-bold"><i class="fa-solid fa-users me-2"></i> Solicitudes</h4>
    <p class="text-muted border-bottom pb-3 mb-4">
        Gestión de postulaciones para la vacante: <strong class="text-dark">@vacanteTitulo</strong>
    </p>

 
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-4 d-flex justify-content-start">
        <a asp-controller="Vacantes" asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="fa-solid fa-arrow-left"></i> Volver a Vacantes
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-5 p-4 shadow-lg" role="alert">
            <i class="fa-solid fa-bell fa-2x mb-2"></i><br>
            <h4 class="alert-heading">¡Aún no hay Solicitudes!</h4>
            <p class="mb-0">Esta vacante no ha recibido postulaciones hasta el momento.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table id="solicitudesTable" class="table table-hover align-middle bg-white shadow-lg rounded">
                <thead class="bg-light text-muted border-bottom border-secondary border-2">
                    <tr>
                        <th style="width: 30%;" class="py-3">Nombre del Solicitante</th>
                        <th style="width: 30%;" class="py-3">Correo Electrónico</th>
                        <th style="width: 15%;" class="py-3">Teléfono</th> 
                        <th class="text-center py-3" style="width: 25%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var solicitud in Model)
                    {
                        <tr class="border-bottom">
                            
                            <td class="fw-bold text-primary">@solicitud.NombreCompleto</td>
                            <td>@solicitud.CorreoElectronico</td>
                            <td>@solicitud.NumeroTelefono</td> 
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                               
                                    <a asp-controller="Solicitudes" asp-action="Details" asp-route-id="@solicitud.Id" class="btn btn-info" title="Ver Solicitud Completa">
                                        <i class="fa-solid fa-file-alt"></i> Detalles
                                    </a>
                                    
                                    
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#responderModal-@solicitud.Id" title="Enviar respuesta al candidato">
                                        <i class="fa-solid fa-reply"></i> Responder
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


@foreach (var solicitud in Model)
{
   
    <div class="modal fade" id="responderModal-@solicitud.Id" tabindex="-1" aria-labelledby="responderModalLabel-@solicitud.Id" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-controller="Vacantes" asp-action="ResponderSolicitud" method="post" novalidate>
                    
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title" id="responderModalLabel-@solicitud.Id">
                            <i class="fa-solid fa-hand-paper me-2"></i> Responder a @solicitud.NombreCompleto
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    
                    <div class="modal-body">
                      
                        <input type="hidden" name="SolicitudId" value="@solicitud.Id" />
                        
                        <div class="alert alert-info py-2 small">
                            Estás enviando un mensaje a **@solicitud.NombreCompleto** (<a href="mailto:@solicitud.CorreoElectronico" class="alert-link">@solicitud.CorreoElectronico</a>)
                        </div>

                        <div class="mb-3">
                            <label for="ContenidoMensaje" class="form-label fw-bold">Mensaje al Solicitante <span class="text-danger">*</span></label>
                            <textarea name="ContenidoMensaje" class="form-control" rows="4" placeholder="Escriba el mensaje para el candidato..." required></textarea>
                            <div class="form-text">Este mensaje se enviará por correo electrónico y se guardará como la respuesta.</div>
                        </div>

                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fa-solid fa-xmark"></i> Cerrar
                        </button>
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-paper-plane"></i> Enviar Respuesta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    
    
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#solicitudesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json" // Traducción al español
                },
                "columnDefs": [
                    { "orderable": false, "targets": 3 } 
                ],
                "order": [[0, "asc"]] 
            });
        });
    </script>
}