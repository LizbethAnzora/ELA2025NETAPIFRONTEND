@model ReclutamientoFrontend.WebApp.Models.Dtos.VacanteDto

@{
    ViewData["Title"] = "Crear Vacante";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fa-solid fa-plus-circle me-2"></i> Registrar Nueva Vacante</h4>
                </div>
                <div class="card-body p-4">
                    
                    @* 1. Acción Corregida: asp-action="Create" *@
                    <form asp-action="Create" method="post" autocomplete="off" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label fw-bold">Título de la Vacante <span class="text-danger">*</span></label>
                            <input asp-for="Titulo" class="form-control" placeholder="Ej: Desarrollador Backend Senior" />
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Ubicacion" class="form-label fw-bold">Ubicación</label>
                            <input asp-for="Ubicacion" class="form-control" placeholder="Ej: Remoto, San Salvador, etc." />
                            <span asp-validation-for="Ubicacion" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">Descripción Completa <span class="text-danger">*</span></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="5" placeholder="Detalle las responsabilidades y el rol..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>
                        
                        @* 2. Campo Requisitos añadido, que es parte del DTO y el POST del backend. *@
                        <div class="mb-4">
                            <label asp-for="Requisitos" class="form-label fw-bold">Requisitos / Perfil</label>
                            <textarea asp-for="Requisitos" class="form-control" rows="4" placeholder="Lista de requisitos mínimos, tecnologías, experiencia, etc."></textarea>
                            <span asp-validation-for="Requisitos" class="text-danger small"></span>
                        </div>
                        
                        @* 3. Campo de Estado ELIMINADO: El controlador VacantesController lo fuerza a 'true' al crear. *@
                        
                        @* Campo oculto para asegurar que 'EstaActiva' se envíe como 'true' si el Controller no lo setea, aunque ya lo forzamos en el Controller. *@
                        <input type="hidden" asp-for="EstaActiva" value="true" />


                        <div class="alert alert-info small py-2" role="alert">
                            <i class="fa-solid fa-info-circle"></i> Los campos marcados con <span class="text-danger">*</span> son obligatorios. Las vacantes se crean **Activas** por defecto.
                        </div>

                        <div class="d-flex flex-column flex-md-row justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary order-2 order-md-1">
                                <i class="fa-solid fa-circle-xmark"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success order-1 order-md-2">
                                <i class="fa-solid fa-save"></i> Crear y Publicar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // Asegura que la validación del lado del cliente funcione
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}