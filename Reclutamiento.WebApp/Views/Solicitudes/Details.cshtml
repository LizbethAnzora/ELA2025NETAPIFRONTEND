@model Frontend.Models.SolicitudDto

@{
    ViewData["Title"] = "Detalles de Solicitud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-info"><i class="fa-solid fa-info-circle"></i> Detalles de Solicitud</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-primary"><i class="fa-solid fa-user"></i> Información del Solicitante</h4>
        <hr />

        <dl class="row mb-4">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.NombreSolicitante</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Correo</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaSolicitud.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Estado == "Pendiente" ? "bg-warning text-dark" :
                                     Model.Estado == "Aprobada" ? "bg-success" : "bg-danger")">
                    @Model.Estado
                </span>
            </dd>

            <dt class="col-sm-3">CV</dt>
            <dd class="col-sm-9">
                <a href="@Model.CVUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                    <i class="fa-solid fa-file"></i> Ver CV
                </a>
            </dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>
