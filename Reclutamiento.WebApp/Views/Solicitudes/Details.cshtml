@model ReclutamientoFrontend.WebApp.Models.Dtos.SolicitudDto

@{
    ViewData["Title"] = $"Detalles de Solicitud de {Model.NombreCompleto}";
}

<div class="container py-5">
    <h2 class="text-primary border-bottom pb-3 mb-4">
        <i class="fa-solid fa-user-check me-2"></i> Detalles de la Solicitud
    </h2>
    
    <div class="row">
        
        <div class="col-md-4">
            
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light fw-bold text-center">
                    Candidato
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.Foto))
                    {
                        @* 🚨 NOTA: Si 'Foto' es una URL, se mostrará. Si es Base64, necesitarás el prefijo "data:image/jpeg;base64," *@
                        <img src="@Model.Foto" class="img-fluid rounded-circle mb-3" alt="Foto del Solicitante" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <i class="fa-solid fa-user-circle fa-5x text-muted mb-3"></i>
                    }
                    
                    <h5 class="fw-bold">@Model.NombreCompleto</h5>
                    <p class="text-muted mb-1">@Model.CorreoElectronico</p>
                    <p class="text-muted">Tel: @Model.NumeroTelefono</p>
                </div>
            </div>
            
            @* Botón de Retorno *@
            <a asp-controller="Vacantes" asp-action="Solicitudes" asp-route-vacanteId="@Model.IdVacante" class="btn btn-secondary w-100">
                <i class="fa-solid fa-arrow-left"></i> Volver al Listado
            </a>
        </div>
        
        <div class="col-md-8">
         
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-12 mt-3 border-top pt-3 fw-bold text-primary">Contenido del Formulario (Experiencia)</dt>
                        <dd class="col-sm-12">
                            <div class="p-3 bg-light rounded border">
                                @* 🚨 IMPORTANTE: CamposPersonalizados es el campo que contiene la experiencia *@
                                @Html.Raw(Model.CamposPersonalizados?.Replace("\n", "<br/>"))
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>
            
            @* 💡 Aquí podrías agregar el historial de respuestas del administrador, si existiera *@
            
        </div>
    </div>
</div>