@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.SolicitudDto>

@{
    ViewData["Title"] = "Mis Solicitudes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-primary"><i class="fa-solid fa-clipboard-list"></i> Mis Solicitudes</h1>

<div class="card shadow-lg border-0">
    <div class="card-body p-4">
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fa-solid fa-circle-info"></i> No has enviado ninguna solicitud aún.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table id="solicitudesTable" class="table table-striped table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th style="width: 40%;">Vacante</th>
                            <th style="width: 25%;">Correo Solicitante</th>
                            <th style="width: 15%;">Estado</th>
                            <th style="width: 20%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var solicitud in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold text-dark">@solicitud.VacanteTitulo</span>
                                </td>
                                
                                <td>@solicitud.EmailSolicitante</td>
                                
                                <td>
                                    @* NOTA: Si eliminaste EstadoSolicitud del DTO, esta columna será eliminada.
                                       Mantendré el campo comentado por si lo llegas a necesitar. *@
                                    @* @solicitud.EstadoSolicitud *@
                                    <span class="badge bg-secondary">En Revisión</span>
                                </td>
                                
                                <td>
                                    <a asp-action="Details" asp-route-id="@solicitud.Id" class="btn btn-info btn-sm">
                                        <i class="fa-solid fa-eye me-1"></i> Ver Detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#solicitudesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json" // Traducción al español
                },
                // El filtro de búsqueda nativo de DataTables buscará en todas las columnas,
                // incluyendo el título de la vacante, cumpliendo el requisito.
                "order": [[0, "asc"]] 
            });
        });
    </script>
}