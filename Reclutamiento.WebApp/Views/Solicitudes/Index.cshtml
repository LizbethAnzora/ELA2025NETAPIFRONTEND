@model IEnumerable<ReclutamientoFrontend.WebApp.Models.Dtos.SolicitudDto>

@{
    ViewData["Title"] = "Mis Solicitudes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-primary"><i class="fa-solid fa-clipboard-list"></i> Mis Solicitudes</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <table id="solicitudesTable" class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Vacante</th>
                    <th>Fecha de Solicitud</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var solicitud in Model)
                {
                    <tr>
                        
                        <td>
                            <a asp-action="Details" asp-route-id="@solicitud.Id" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-eye"></i> Ver Detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#solicitudesTable').DataTable();
        });
    </script>
}
