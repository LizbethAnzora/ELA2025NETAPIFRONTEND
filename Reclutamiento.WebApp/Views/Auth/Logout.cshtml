@{
    ViewData["Title"] = "Cerrar Sesión";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 text-center" style="max-width: 420px; width: 100%;">
        <div class="mb-4">
            <i class="bi bi-box-arrow-right display-3 text-danger"></i>
            <h2 class="mt-3">Cerrar Sesión</h2>
            <p class="text-muted">¿Seguro que deseas cerrar tu sesión?</p>
        </div>

        <form asp-action="Logout" method="post">
            <div class="d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </button>
            </div>
        </form>
    </div>
</div>
